#!/usr/local/rvm/bin/munin_ruby

if ARGV.any?{|x| x == "config"}

  puts "update no"
  puts "graph_title Linc Success Rate"
  puts "graph_vlabel Success (percentage)"
  puts "graph_args --base 1000 -l 0 -u 100 -r"
  puts "graph_period minute"
  puts "graph_period minute"
  puts "graph_category linccer"

  puts "graph_order success=pound_successfail.success fail=pound_successfail.fail"

  puts "total.graph no"
  puts "total.cdef success,fail,+"

  puts "success.label success"
  puts "#{code}.draw AREA"
  puts "#{code}.cdef success,total,/,100,*"

  puts "success.label fail"
  puts "#{code}.draw STAC"
  puts "#{code}.cdef fail,total,/,100,*"
else

  # this is a virtual plugin and uses the data from pound_successfail

end
